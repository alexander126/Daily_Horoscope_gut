<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stormGrey"
    tools:context="com.example.alex.daily_horoscope.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         />
<LinearLayout
    android:id="@+id/line1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <ImageButton
        android:id="@+id/bAquarius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/horoscope" />

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bPisces"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bAries"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:gravity="center">
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bTaurs"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope">

    </ImageButton>
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bGemini"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope">

    </ImageButton>
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bCancer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line2"
        android:gravity="center">
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bLeo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bVirgo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bLibra"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line3"
        android:id="@+id/line4"
        android:gravity="center">
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bScorpio"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bSagittarius"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>

    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:id="@+id/bCapricorn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/horoscope"/>
    </LinearLayout>



</RelativeLayout>
