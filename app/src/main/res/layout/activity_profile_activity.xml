<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context="com.example.alex.daily_horoscope.profile_activity">

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name" />
    <EditText
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:id="@+id/name"
        android:width="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginEnd="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="@string/hint1"/>


    <ImageButton
        android:background="@null"
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="330dp"
        android:layout_centerInParent="true"
        android:src="@drawable/buttons_pressed"
        android:contentDescription="button" />
    <ImageButton
        android:background="@null"
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="390dp"
        android:layout_centerInParent="true"
        android:src="@drawable/about_button_pressed"
        android:contentDescription="button" />
    <ImageButton
        android:background="@null"
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="450dp"
        android:layout_centerInParent="true"
        android:src="@drawable/exit_button_pressed"
        android:contentDescription="button" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/elements"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="60dp"
        android:layout_alignParentStart="true" />
</RelativeLayout>
